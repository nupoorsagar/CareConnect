<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    android:padding="16dp">

    <!-- Logo Image at the Top Center -->


    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="229dp"
        android:layout_height="222dp"
        android:layout_gravity="center"
        android:contentDescription="app logo"
        android:src="@drawable/img_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_donate"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Donate Supplies" />

        <Button
            android:id="@+id/button_view_need"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:text="View Needs and Contact" />

        <Button
            android:id="@+id/button_track"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Track My Donations" />

        <Button
            android:id="@+id/button_request"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:text="Request Supplies" />

    </LinearLayout>
</LinearLayout>
